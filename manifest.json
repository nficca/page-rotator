{
  "manifest_version": 2,

  "name": "Page Rotator",
  "description": "Rotate web pages! (And do some other random things)",
  "version": "0.7",
  "browser_action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "img/icon-16.png",
    "32": "img/icon-32.png",
    "48": "img/icon-48.png",
    "128": "img/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": [],
      "js": ["scripts/access_dom.js"]
    }
  ],
  "permissions": [
    "activeTab"
  ]
}